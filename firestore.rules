rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // User profiles
    match /users/{userId} {
      // Allow users to create and update their own profile
      allow create: if isSignedIn() && userId == request.auth.uid;
      allow update: if isSignedIn() && userId == request.auth.uid;
      
      // Allow any signed-in user to read profiles
      allow read: if isSignedIn();
    }

    // Organizations
    match /organizations/{orgId} {
      allow read, create: if isSignedIn();
      allow update: if isSignedIn() && 
                   exists(/databases/$(database)/documents/organizations/$(orgId)) &&
                   get(/databases/$(database)/documents/organizations/$(orgId)).data.ownerId == request.auth.uid;

      // Teams subcollection
      match /teams/{teamId} {
        allow read, write: if isSignedIn();
      }

      // Videos subcollection
      match /videos/{videoId} {
        allow read, write: if isSignedIn();
      }
    }

    // Legacy collections
    match /teams/{teamId} {
      allow read, write: if isSignedIn();
    }

    match /videos/{videoId} {
      allow read, write: if isSignedIn();
    }

    match /workspaces/{workspaceId} {
      allow read, write: if isSignedIn();
    }
  }
}