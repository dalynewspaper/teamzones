rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to all users
    match /public/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to write and read files
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}